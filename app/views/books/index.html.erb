<h1>Listing books</h1>

<table class="table">
  <thead>
    <tr>
      <th>Title</th>
      <th></th>
      <th>Active</th>
      <th></th>
    </tr>
  </thead>

  <tbody>
    <% @books.each do |book| %>
      <tr>
        <td><%= link_to book.title, edit_book_path(book) %></td>
        <td><%= image_tag book.cover.url(:thumb) %></td>
        <td><%= book.active %></td>
        <td><%= link_to 'Chapters', book_chapters_path(book) %></td>
        <td><%= link_to 'Destroy', book, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

